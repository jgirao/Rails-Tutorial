<h1>Listing papers</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Abstract</th>
    <th>Submitted</th>
    <th>Accepted</th>
    <th>Rejected</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @papers.each do |paper| %>
  <tr>
    <td><%= paper.title %></td>
    <td><%= paper.abstract %></td>
    <td><%= paper.submitted %></td>
    <td><%= paper.accepted %></td>
    <td><%= paper.rejected %></td>
    <td><%= link_to 'Show', paper %></td>
    <td><%= link_to 'Edit', edit_paper_path(paper) %></td>
    <td><%= link_to 'Destroy', paper, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

